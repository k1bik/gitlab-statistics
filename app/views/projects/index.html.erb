<%= form_with url: config_projects_path(config), method: :get do |f| %>
  <div class="search-input-container">
    <%= f.text_field :search,
      value: params[:search],
      autocomplete: "off",
      inputmode: "search",
      type: "search",
      placeholder: "Search projects by name or description...",
      class: "search-input"
    %>
    <%= f.submit "Search", class: "search-input-button" %>
  </div>
<% end %>

<%= turbo_frame_tag :projects_list, src: projects_list_config_projects_path(config, page: params[:page], search: params[:search]), loading: :lazy do %>
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <%= render "shared/loading_spinner" %>
  </div>
<% end %>
